# Source: kyverno-authz-server/templates/authz-server/service.yaml
apiVersion: v1
kind: Service
metadata:
  name: kyverno-authz-server
  namespace: default
  labels:
    app.kubernetes.io/component: authz-server
    app.kubernetes.io/instance: kyverno-authz-server
    app.kubernetes.io/managed-by: Helm
    app.kubernetes.io/part-of: kyverno-authz-server
    app.kubernetes.io/version: 0.0.0
    helm.sh/chart: kyverno-authz-server-0.0.0
spec:
  type: ClusterIP
  ports:
  - name: grpc
    port: 9081
    protocol: TCP
    targetPort: authz
  selector:
    app.kubernetes.io/component: authz-server
    app.kubernetes.io/instance: kyverno-authz-server
    app.kubernetes.io/part-of: kyverno-authz-server
---
